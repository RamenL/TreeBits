<p id="notice"><%= notice %></p>

<h1>Bit Modules</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Author</th>
      <th>Date added</th>
      <th>Last modified</th>
      <th>Sub topic one</th>
      <th>Sub topic two</th>
      <th>Super topic</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bit_modules.each do |bit_module| %>
      <tr>
        <td><%= bit_module.name %></td>
        <td><%= bit_module.author %></td>
        <td><%= bit_module.created_at %></td>
        <td><%= bit_module.updated_at %></td>
        <td><%= BitModule.find(bit_module.sub_topic_one).name unless bit_module.sub_topic_one == 0%></td>
        <td><%= BitModule.find(bit_module.sub_topic_two).name unless bit_module.sub_topic_two == 0%></td>
        <td><%= BitModule.find(bit_module.super_topic).name unless bit_module.super_topic == 0%></td>
        <td><%= link_to 'Show', bit_module %></td>
        <td><%= link_to 'Edit', edit_bit_module_path(bit_module) %></td>
        <td><%= link_to 'Destroy', bit_module, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

