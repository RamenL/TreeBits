<!DOCTYPE html>
<html>
<head>
  <title>Servd</title>
  <%= csrf_meta_tags %>
  <link href="https://fonts.googleapis.com/css?family=Open+Sans:300" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css?family=Roboto:100" rel="stylesheet">

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <ul class="nav">

  <li id="homeContainer" class="nav-hover">
    <%= link_to root_path do %>

    <%= image_tag("servd-logo.gif", :class =>"homebutton") %>

    <%end %>
  </li>
  <li class="nav-hover"> <%= link_to "Events", opportunities_path %></li>
  <li class="nav-hover"> <%= link_to "Organizations", organizations_path %></li>
  <li class-'nav-hover"> <%= link_to "Tree Bits", tree_bits_path %></li>

  <% if logged_in?%>

      <li class="nav-hover"> <%= link_to "Dashboard", dashboard_path_url %></li>
      <div class="farRight nav-hover">
        <%= link_to session[:user_id], opportunities_path %>
        <li class = "logout nav-hover"><%= link_to "Logout", logout_path, method: :delete %></li>
      </div>
  <% end %>
</ul>

<%if notice%>
  <p id="notice"><%= notice %></p>
<% end %>

<%= yield %>

<!-- <div id="foots"></div> -->
</body>
</html>
